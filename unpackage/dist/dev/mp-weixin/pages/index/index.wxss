
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.login-form {
  margin-top: 100px;
  width: 300px;
  padding: 20px;
  border: 1px solid #428fc1;
  border-radius: 4px;
}
.form-group {
  margin-bottom: 16px;
}
input {
  width: 100%;
  height: 40px;
  marin: 8px 12px;
  padding: 2px;
  border: 1px solid #ccc;
  border-radius: 4px;
}
button {
  width: 100%;
  height: 40px;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

